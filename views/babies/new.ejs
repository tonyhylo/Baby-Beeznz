<%- include('../partials/header') %>

<h2 class="h-title">Enter a New Baby</h2>
<% if (user) { %>
<form action="/babies" method="POST" class="h-title">
  <label
    >Name:
    <input type="text" name="name" /> </label
  ><br />
  <label
    >Date of Birth:
    <input type="date" name="dob" /> </label
  ><br />
  <input type="submit" value="Add Baby" />
</form>
<% } else { %>
  <%= "Log in to enter a new baby" %>
  <% }; %>

